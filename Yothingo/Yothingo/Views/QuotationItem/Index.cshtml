@model IEnumerable<YothingoSprint1.Models.QuotationItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quotation.QuotationID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Part.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th> @Html.DisplayNameFor(model => model.Quotation.GrandTotal)</th>
    </tr>

    @foreach (var item in Model)
    {
    
        
    <tr>

        <td class="jumbotron">
            @Html.DisplayFor(modelItem => item.Quotation.QuotationID)

        </td>

        <td class="jumbotron">
            @Html.DisplayFor(modelItem => item.PartID)
        </td>

        <td class="jumbotron">
            @Html.DisplayFor(modelItem => item.Part.Name)
        </td>

        <td class="jumbotron">
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>

        <td class="jumbotron">
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td class="jumbotron">
            @Html.DisplayFor(modelItem => item.Quotation.GrandTotal)
        </td>

    </tr>
        
    }

</table>
