@model YothingoSprint1.Models.Status


    @if (Model == null)
    {
        <div class="panel panel-danger">
            <div class="panel-body">No Status Selected!</div>
        </div>
    }
    else
    {
        <div class="panel panel-success">
            <div class="panel-body"> Name: @Model.Name</div>
            <div class="panel-body"> Address: @Model.StatusDescription</div>

        </div>
    }
    </div>