@model YothingoSprint1.Models.Room

    @{
        ViewBag.Title = "New Status";
    }
    <br>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>New Status</h2>
            <hr />
            @Html.ValidationSummary(true)

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Status Name" } })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <h5>Status Description:</h5>
            <b>&#9432; </b>
            Drag and type Description

            <div class="form-group">
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.FridgeDescription, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Status Description" } })
                    @Html.ValidationMessageFor(model => model.FridgeDescription)
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-10">
                    <input type="button" value="Back" onclick="location.href='@Url.Action("Index", "Status")'" class="btn btn-info" />|
                    <input type="submit" value="Add Status" class="btn btn-success" />
                </div>
            </div>

            @*<div class="form-group">
                    @Html.ActionLink("Back", "Index", new { id = Model.ID }, new { @class = "btn btn-info" }) |
                    <input type="submit" value="submit" class="btn btn-success" />
                </div>*@
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>
