@model IEnumerable<YothingoSprint1.Models.Room>



    @{
        ViewBag.Title = "Room";
    }

    <h2>Statuses</h2>
    <p>
        <input type="button" value="Add Fridge Type" onclick="location.href='@Url.Action("Create", "Room")'" class="btn btn-primary" />
    </p>
    
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FridgeDescription)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FridgeDescription)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-success" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }


        </table>
    </div>
    </div>