@model IEnumerable<YothingoSprint1.Models.Reports.DailyReport>

@{
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";}

<h2>Reports</h2>

<p>
    <input type="button" value=" Report" onclick="location.href='@Url.Action("Create", "DailyReports")'" class="btn btn-primary" />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Request.Request_Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReportDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Summary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Request.Request_Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReportDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Summary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DailyReportId }) |
            @Html.ActionLink("Details", "Details", new { id=item.DailyReportId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DailyReportId })
        </td>
    </tr>
}

</table>
