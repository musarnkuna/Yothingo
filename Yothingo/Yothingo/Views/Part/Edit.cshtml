@model YothingoSprint1.Models.Part

    @{
        Layout = "~/Views/Shared/_AdminLteLayout.cshtml";

    }

    <h2>Change Part Details</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.PartID)

        <div class="form-group">
            <div class="col-md-10">
                <h5>Part Name</h5>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Request Status" } })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "form-control" })
                <b>&#9432; </b>
                Drag and Edit Description
            </div>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", style = "width: 100%; max-width: 100%;", @type = "text", @placeholder = "Request Description" } })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <h5>Price</h5>
                @Html.EditorFor(model => model.UnitPrice, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Request Status" } })
                @Html.ValidationMessageFor(model => model.UnitPrice)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="button" value="Back" onclick="location.href='@Url.Action("Index", "Part")'" class="btn btn-primary" />|
                <input type="submit" value="Change Details" class="btn btn-success" />
            </div>
        </div>

    </div>
    }