@model IEnumerable<YothingoSprint1.Models.Reports.Minutes>

@{
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}

<h2>Meeting Minutes</h2>

<p>
    <input type="button" value="Meeting Minutes" onclick="location.href='@Url.Action("Create", "Minutes")'" class="btn btn-primary" />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.applicationUser.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Event.Subject)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.applicationUser.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Subject)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MeetingMinutesId }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Details", "Details", new { id = item.MeetingMinutesId }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.MeetingMinutesId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
