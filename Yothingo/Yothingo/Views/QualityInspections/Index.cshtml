@model IEnumerable<YothingoSprint1.Models.Reports.QualityInspection>

@{
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}

<h2>Inspections</h2>

<p>
    <input type="button" value=" Report" onclick="location.href='@Url.Action("Create", "QualityInspections")'" class="btn btn-primary" />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QualityInspectionStatus.StatusDecription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Request.Request_Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Summary)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.QualityInspectionStatus.StatusDecription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Request.Request_Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Summary)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.RequestID }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Details", "Details", new { id = item.RequestID }, new { @class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", new { id = item.RequestID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
